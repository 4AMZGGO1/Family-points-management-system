/* pages/shop/shop.wxss */
.container {
  padding: 20rpx;
  min-height: 100vh;
}

.page-header {
  text-align: center;
  margin: 40rpx 0;
}

.page-title {
  font-size: 40rpx;
  font-weight: bold;
  color: white;
  display: block;
  margin-bottom: 10rpx;
}

.page-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  display: block;
}

.points-info {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 15rpx;
  padding: 30rpx;
  text-align: center;
  margin: 20rpx 0;
}

.points-label {
  font-size: 28rpx;
  color: #666;
}

.points-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #667eea;
  margin-left: 10rpx;
}

.shop-list {
  margin-top: 20rpx;
}

.shop-item {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.shop-item:active {
  transform: scale(0.98);
}

.item-image {
  width: 150rpx;
  height: 150rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.product-image {
  width: 100%;
  height: 100%;
  border-radius: 15rpx;
}

.placeholder-image {
  width: 100%;
  height: 100%;
  background: #f8f9fa;
  border-radius: 15rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.placeholder-icon {
  font-size: 60rpx;
  color: #ccc;
}

.item-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.item-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.item-desc {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 20rpx;
  line-height: 1.4;
}

.item-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.item-stock {
  font-size: 22rpx;
  color: #999;
}

.item-price {
  font-size: 28rpx;
  font-weight: bold;
  color: #667eea;
}

.item-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.quantity-selector {
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 25rpx;
  padding: 5rpx;
}

.quantity-btn {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background: white;
  border: none;
  font-size: 24rpx;
  font-weight: bold;
  color: #333;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.quantity-btn:disabled {
  opacity: 0.5;
  color: #ccc;
}

.quantity-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin: 0 20rpx;
  min-width: 40rpx;
  text-align: center;
}

.purchase-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 25rpx;
  padding: 20rpx 30rpx;
  font-size: 26rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.purchase-btn:active {
  transform: scale(0.95);
}

.purchase-btn.disabled {
  background: #ccc;
  color: #999;
}

.purchase-btn[disabled] {
  background: #ccc;
  color: #999;
}

.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
  color: #666;
}

.empty-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  display: block;
}

.purchase-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  margin: 0 40rpx;
  max-width: 600rpx;
  width: 100%;
  max-height: 80vh;
  overflow-y: auto;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-body {
  padding: 30rpx;
}

.purchase-item {
  display: flex;
  margin-bottom: 30rpx;
}

.purchase-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 15rpx;
  margin-right: 20rpx;
}

.purchase-placeholder {
  width: 120rpx;
  height: 120rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 20rpx;
}

.purchase-info {
  flex: 1;
}

.purchase-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.purchase-desc {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 10rpx;
}

.purchase-quantity {
  font-size: 22rpx;
  color: #999;
  display: block;
}

.purchase-summary {
  background: #f8f9fa;
  border-radius: 15rpx;
  padding: 30rpx;
}

.summary-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.summary-row:last-child {
  margin-bottom: 0;
}

.summary-row.total {
  border-top: 1rpx solid #ddd;
  padding-top: 15rpx;
  font-weight: bold;
}

.summary-label {
  font-size: 26rpx;
  color: #666;
}

.summary-value {
  font-size: 26rpx;
  color: #333;
  font-weight: 600;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 1rpx solid #eee;
}

.btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 15rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
}

.btn-cancel {
  background: #f8f9fa;
  color: #666;
}

.btn-confirm {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.btn-confirm[disabled] {
  background: #ccc;
  color: #999;
}

.success-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.success-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 20rpx;
}

.success-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.success-desc {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 40rpx;
}