/* pages/home/home.wxss */
.container {
  padding: 20rpx;
  min-height: 100vh;
}

.welcome-section {
  text-align: center;
  margin: 40rpx 0;
}

.welcome-text {
  font-size: 36rpx;
  color: white;
  font-weight: 600;
}

.welcome-icon {
  font-size: 40rpx;
  margin-right: 10rpx;
}

.points-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 30rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  margin: 40rpx 0;
}

.points-title {
  font-size: 32rpx;
  display: block;
  margin-bottom: 20rpx;
}

.points-number {
  font-size: 80rpx;
  font-weight: bold;
  display: block;
  margin: 20rpx 0;
}

.points-desc {
  font-size: 28rpx;
  opacity: 0.9;
  display: block;
}

.quick-actions {
  display: flex;
  justify-content: space-between;
  margin: 40rpx 0;
  gap: 20rpx;
}

.action-item {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 40rpx 20rpx;
  text-align: center;
  flex: 1;
  transition: all 0.3s ease;
}

.action-item:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.8);
}

.action-icon {
  font-size: 60rpx;
  display: block;
  margin-bottom: 20rpx;
}

.action-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.action-desc {
  font-size: 24rpx;
  color: #666;
  display: block;
}

.card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  margin: 20rpx 0;
  overflow: hidden;
}

.card-header {
  background: #f8f9fa;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.card-content {
  padding: 0;
}

.list-item {
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.list-item:last-child {
  border-bottom: none;
}

.list-item:active {
  background: #f8f9fa;
}

.item-content {
  flex: 1;
}

.item-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.item-meta {
  font-size: 24rpx;
  color: #666;
  display: block;
}

.item-status {
  margin-left: 20rpx;
}

.status-badge {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: white;
}

.status-pending {
  background: #ffc107;
  color: #333;
}

.item-amount {
  margin-left: 20rpx;
  text-align: right;
}

.amount {
  font-size: 28rpx;
  font-weight: bold;
}

.amount.positive {
  color: #28a745;
}

.amount.negative {
  color: #dc3545;
}

.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
  color: #666;
}

.empty-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  display: block;
}

.category-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  padding: 20rpx;
}

.category-item {
  background: #f8f9fa;
  border-radius: 15rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  flex: 1;
  min-width: 150rpx;
  transition: all 0.3s ease;
}

.category-item:active {
  background: #e9ecef;
  transform: scale(0.95);
}

.category-icon {
  font-size: 40rpx;
  display: block;
  margin-bottom: 10rpx;
}

.category-name {
  font-size: 24rpx;
  color: #333;
  font-weight: 600;
}