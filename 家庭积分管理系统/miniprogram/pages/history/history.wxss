/* pages/history/history.wxss */
.container {
  padding: 20rpx;
  min-height: 100vh;
}

.page-header {
  text-align: center;
  margin: 40rpx 0;
}

.page-title {
  font-size: 40rpx;
  font-weight: bold;
  color: white;
  display: block;
  margin-bottom: 10rpx;
}

.page-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  display: block;
}

.points-info {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 15rpx;
  padding: 30rpx;
  text-align: center;
  margin: 20rpx 0;
}

.points-label {
  font-size: 28rpx;
  color: #666;
}

.points-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #667eea;
  margin-left: 10rpx;
}

.filter-tabs {
  display: flex;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 15rpx;
  padding: 10rpx;
  margin: 20rpx 0;
  gap: 10rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  border-radius: 10rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: #667eea;
  color: white;
}

.tab-item:active {
  transform: scale(0.95);
}

.history-list {
  margin-top: 20rpx;
}

.history-item {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 15rpx;
  padding: 30rpx;
  margin-bottom: 15rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.history-item:active {
  transform: scale(0.98);
}

.item-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.earn-icon {
  background: #d4edda;
  color: #28a745;
}

.spend-icon {
  background: #f8d7da;
  color: #dc3545;
}

.icon {
  font-size: 32rpx;
  font-weight: bold;
}

.item-content {
  flex: 1;
  margin-right: 20rpx;
}

.item-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.item-time {
  font-size: 22rpx;
  color: #999;
  display: block;
  margin-bottom: 5rpx;
}

.item-category {
  font-size: 20rpx;
  color: #667eea;
  background: #f0f2ff;
  padding: 4rpx 12rpx;
  border-radius: 10rpx;
  display: inline-block;
}

.item-amount {
  text-align: right;
  flex-shrink: 0;
}

.amount {
  font-size: 32rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 5rpx;
}

.amount.positive {
  color: #28a745;
}

.amount.negative {
  color: #dc3545;
}

.amount-label {
  font-size: 20rpx;
  color: #999;
  display: block;
}

.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
  color: #666;
}

.empty-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  display: block;
}

.load-more {
  text-align: center;
  padding: 40rpx;
  color: #666;
  font-size: 26rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 15rpx;
  margin: 20rpx 0;
}

.load-more:active {
  background: rgba(255, 255, 255, 0.8);
}

.no-more {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 24rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 15rpx;
  margin: 20rpx 0;
}