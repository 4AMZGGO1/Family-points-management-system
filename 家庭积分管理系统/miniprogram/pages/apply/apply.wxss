/* pages/apply/apply.wxss */
.container {
  padding: 20rpx;
  min-height: 100vh;
}

.page-header {
  text-align: center;
  margin: 40rpx 0;
}

.page-title {
  font-size: 40rpx;
  font-weight: bold;
  color: white;
  display: block;
  margin-bottom: 10rpx;
}

.page-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  display: block;
}

.points-info {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 15rpx;
  padding: 30rpx;
  text-align: center;
  margin: 20rpx 0;
}

.points-label {
  font-size: 28rpx;
  color: #666;
}

.points-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #667eea;
  margin-left: 10rpx;
}

.card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  margin: 20rpx 0;
  overflow: hidden;
}

.card-header {
  background: #f8f9fa;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.card-content {
  padding: 30rpx;
}

.category-filter {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  margin-bottom: 30rpx;
}

.filter-item {
  padding: 15rpx 30rpx;
  background: #f8f9fa;
  border-radius: 25rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.3s ease;
}

.filter-item.active {
  background: #667eea;
  color: white;
}

.task-list {
  max-height: 600rpx;
  overflow-y: auto;
}

.task-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 15rpx;
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
}

.task-item.selected {
  border-color: #667eea;
  background: #f8f9ff;
}

.task-item:active {
  transform: scale(0.98);
}

.task-content {
  flex: 1;
}

.task-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.task-desc {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 10rpx;
}

.task-category {
  font-size: 22rpx;
  color: #999;
  background: #f0f0f0;
  padding: 5rpx 15rpx;
  border-radius: 10rpx;
  display: inline-block;
}

.task-score {
  text-align: center;
  margin-left: 20rpx;
}

.score-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #28a745;
  display: block;
}

.score-label {
  font-size: 20rpx;
  color: #666;
  display: block;
}

.selected-task-info {
  background: #f8f9ff;
  border-radius: 15rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.form-group {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
  display: block;
  margin-bottom: 15rpx;
}

.form-textarea {
  width: 100%;
  min-height: 120rpx;
  padding: 20rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 10rpx;
  font-size: 28rpx;
  background: white;
  box-sizing: border-box;
}

.form-textarea:focus {
  border-color: #667eea;
}

.char-count {
  font-size: 24rpx;
  color: #999;
  text-align: right;
  display: block;
  margin-top: 10rpx;
}

.image-upload {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.image-item {
  position: relative;
  width: 150rpx;
  height: 150rpx;
}

.proof-image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.image-delete {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 40rpx;
  height: 40rpx;
  background: #dc3545;
  color: white;
  border-radius: 50%;
  text-align: center;
  line-height: 40rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.upload-btn {
  width: 150rpx;
  height: 150rpx;
  border: 2rpx dashed #ccc;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: #f8f9fa;
}

.upload-btn:active {
  background: #e9ecef;
}

.upload-icon {
  font-size: 40rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.upload-text {
  font-size: 24rpx;
  color: #666;
}

.upload-tip {
  font-size: 22rpx;
  color: #999;
  margin-top: 10rpx;
  display: block;
}

.submit-section {
  margin-top: 40rpx;
}

.submit-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  font-weight: 600;
}

.submit-btn[disabled] {
  opacity: 0.6;
}

.success-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  margin: 0 40rpx;
  max-width: 500rpx;
}

.success-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 20rpx;
}

.success-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.success-desc {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 40rpx;
}

.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
  color: #666;
}

.empty-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  display: block;
}